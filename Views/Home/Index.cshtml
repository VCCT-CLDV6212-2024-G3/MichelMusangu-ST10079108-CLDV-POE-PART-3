@model CustomerProfile

@{
    ViewData["Title"] = "Home Page";
}
<h1>
    Customer and Image Form
</h1>
<div class="form-body">
    <div class="form-section">
        <form asp-action="StoreTableInfo" method="post" enctype="multipart/form-data">
            <div>
                
                <input placeholder="First Name" type="text" id="first-name" name="FirstName" value="" required>
            </div>
            <div>
                
                <input placeholder="Last Name" type="text" id="last-name" name="LastName" value="" required>
            </div>
            <div>
                
                <input placeholder="Phone Number" type="text" id="phone-number" name="PhoneNumber" value="" required>
            </div>
            <div>
                
                <input placeholder="Email" type="email" id="email" name="Email" value="" required>
            </div>
            <div>
                <button class="submitBtn" type="submit">Add profile</button>
            </div>
        </form>
    </div>

    <div class="form-section">
        <form asp-action="UploadBlob" method="post" enctype="multipart/form-data">
            <label for="image-file">Upload Image</label>
            <input type="file" id="image-file" name="imageFile">
            <button class="submitBtn" type="submit">Submit Image</button>
        </form>
    </div>
</div>